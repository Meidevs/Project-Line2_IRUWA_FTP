  <script>
    $(document).ready(async () => {
      let params = new URL(document.location).searchParams;
      var a = params.get('ccode');
      await getInfo(a);
    });

    getInfo = async (a) => {
      try {
        let response = await fetch('https://mostfeel.site:8888/admin/detail/company', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ cmp_seq: a })
        });

        let json = await response.json();
        console.log(json)
        if (response.ok) {
          setCompanyInfo(json);
          setAdsInfo(json.item);
        }
      } catch (err) {
        console.log(err);
      }
    }
    setCompanyInfo = (data) => {
      var totalCnt = data.item.length;
      var normalCnt = data.item.filter((item) => item.ads_type == 0).length;
      var premiumCnt = data.item.filter((item) => item.ads_type == 1).length;
      var cancelledCnt = data.item.filter((item) => item.cancelled == 1).length;
      var total = document.getElementById('total-cnt');
      var normal = document.getElementById('normal-cnt');
      var premium = document.getElementById('premium-cnt');
      var cancel = document.getElementById('cancel-cnt');
      total.innerHTML = `<span>전체 광고 :</span><p class="text-right">` + totalCnt + `</p>`;
      normal.innerHTML = `<span>일반 광고 :</span><p class="text-right">` + normalCnt + `</p>`;
      premium.innerHTML = `<span>프리미엄 광고 :</span><p class="text-right">` + premiumCnt + `</p>`;
      cancel.innerHTML = `<span>삭제된 광고 :</span><p class="text-right">` + cancelledCnt + `</p>`;

      var profile = document.getElementsByClassName('author-images')[0];
      // profile.innerHTML =  <img src="images/img-22.jpg">
      var img = document.createElement('img');
      img.setAttribute("style", "width : 100px; height : 100px;")
      img.src = data.cmp[0].profile;
      profile.appendChild(img);

      var profileInfo = document.getElementById('profile-info');
      profileInfo.innerHTML = `<li> <i class="fa fa-map-marker"></i>` + data.cmp[0].cmp_detail_location + `</li>
                            <li> <i class="fa fa-phone"></i>` + data.cmp[0].cmp_phone + `</li>`
      var companyName = document.getElementsByClassName('classauthor-title')[0];
      companyName.innerHTML = `<p>` + data.cmp[0].cmp_name + `</p>`
    }

    setAdsInfo = (data) => {
      var rawArray = data;
      var divList = document.getElementById('related-item');
      for (var i = 0; i < rawArray.length; i++) {
        var status;
        if (rawArray[i].cancelled == 0) status = '게시중';
        if (rawArray[i].cancelled == 1) status = '삭제';
        var newDiv = document.createElement('div');
        newDiv.setAttribute("class", "col-lg-3 col-md-6 col-sm-6 col-xs-12 col-12 Classidied-box");
        newDiv.innerHTML =
          `<div class="card card-event info-overlay">
              <div class="img has-background" style="background-image: url(`+ rawArray[i].image[0].uri + `); background-size:cover ">
                <div> <img alt="340x230" class="card-img-top img-responsive"
                  data-holder-rendered="true" src="` + rawArray[i].image[0].uri + `"> 
                </div>
              </div>
              <div class="card-body">
                <h4 class="card-title"> <a href="addetail.html">` + rawArray[i].item_name + `</a> </h4>
                <div class="card-event-info">
                  <p class="event-location"><i class="fas fa-check-circle"></i> 광고여부 : ` + status + `</p>
                  <p class="event-time"><i class="far fa-clock"></i> 등록일자 : ` + rawArray[i].reg_date.substring(0, 10) + `</p>
                </div>
              </div>
              <div class="card-footer">
                <div class="pull-left left">
                  <div class=""><a href="https://mostfeel.site:8888/admin/detail/item?ccode=` + rawArray[i].cmp_seq + "&icode=" + rawArray[i].items_seq + `">업체로 이동</div>
                </div>
              </div>
            </div>`;
        divList.appendChild(newDiv);
      }
    }
  </script>
